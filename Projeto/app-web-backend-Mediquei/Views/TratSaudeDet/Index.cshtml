@model IEnumerable<app_web_backend_Mediquei.Models.TratSaudeDet>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bootstrap Simple Data Table</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/tabelas.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</head>
<body>
    <div class="custom-control-inline">
        <div class="table-responsive-xl">
            <div class="table-responsive-xl table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2><b>Tratamento Saúde</b></h2></div>
                        <div class="col-sm-4">
                            <a class="btn btn-success" asp-action="Create" type="button">Adicionar</a>
                            <div class="search-box">
                                <i class="material-icons">&#xE8B6;</i>
                                <input type="text" class="form-control" placeholder="Search&hellip;">
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Medicamento)</th>
                            <th>@Html.DisplayNameFor(model => model.Posologia)</th>
                            <th>@Html.DisplayNameFor(model => model.Observacao)</th>
                            <th>@Html.DisplayNameFor(model => model.DataInicial)</th>
                            <th>@Html.DisplayNameFor(model => model.DataFinal)</th>
                            <th>@Html.DisplayNameFor(model => model.HoraInicial)</th>
                            <th>@Html.DisplayNameFor(model => model.intervalo)</th>
                            <th>@Html.DisplayNameFor(model => model.EfeitoAdverso1)</th>
                            <th>@Html.DisplayNameFor(model => model.EfeitoAdverso2)</th>
                            <th>@Html.DisplayNameFor(model => model.EfeitoAdverso3)</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Medicamento.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Posologia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataInicial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataFinal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraInicial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.intervalo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EfeitoAdverso1.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EfeitoAdverso2.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EfeitoAdverso3.Descricao)
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.TratSaudeDetId" class="view" title="Details" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                                    <a asp-action="Edit" asp-route-id="@item.TratSaudeDetId" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                    <a asp-action="Delete" asp-route-id="@item.TratSaudeDetId" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>