@model app_web_backend_Mediquei.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<head>
    <title>Login Page</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>

    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card2">
                <div class="card-header">
                    <h3>Cadastre-se</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Nome" class="form-control" placeholder="Nome">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Senha" class="form-control" placeholder="Senha">
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="EMail" class="form-control" placeholder="E-mail"/>
                            <span asp-validation-for="EMail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="EMailRecuperar" class="form-control" placeholder="Email de Recuperação">
                            <span asp-validation-for="EMailRecuperar" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()" ></select>
                            <span asp-validation-for="Perfil" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-info" asp-controller="Home" asp-action="Index">Voltar</a>
                            <input type="submit" value="Cadastrar" class="btn float-right login_btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
