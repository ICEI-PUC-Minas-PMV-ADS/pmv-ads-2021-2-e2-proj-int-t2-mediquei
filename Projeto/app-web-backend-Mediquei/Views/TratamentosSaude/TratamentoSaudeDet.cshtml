@model app_web_backend_Mediquei.Models.TratamentoSaude

@{
    ViewData["Title"] = "TratamentoSaudeDet";
}

<
<div>
    <h4>Detalhes do tratamento</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Data Inicial
                </th>
                <th>
                    Data Final
                </th>
                <th>
                    Medicamento
                </th>
                <th>
                    Posologia
                </th>
                <th>
                    Observação
                </th>
                <th>
                    Hora Inicial
                </th>
                <th>
                    Intervalo
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.TratamentoSaudeDet.OrderByDescending(c => c.DataInicial))
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFinal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicamento.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posologia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.intervalo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EfeitoAdverso1.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EfeitoAdverso2.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EfeitoAdverso3.Descricao)
                </td>

            </tr>
            }
        </tbody>
    </table>
</div>


<div>
    <a asp-action="Index">Voltar</a> |
    <a asp-action="Edit" asp-route-id=item.Id>Edit</a> |
    <a asp-action="Details" asp-route-id=item.Id>Details</a> |
    <a asp-action="Delete" asp-route-id=item.Id>Delete</a>


</div>

