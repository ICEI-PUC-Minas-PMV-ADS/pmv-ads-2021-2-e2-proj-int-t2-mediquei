@model app_web_backend_Mediquei.Models.Medicamento

@{
    ViewData["Title"] = "Delete";
}

<h3>Deletar</h3>
<div>
    <h4>Você tem certeza que quer deletar o medicamento?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a href=/Medicamentos type="button" class="btn btn-secondary">Voltar</a>
    </form>
</div>
