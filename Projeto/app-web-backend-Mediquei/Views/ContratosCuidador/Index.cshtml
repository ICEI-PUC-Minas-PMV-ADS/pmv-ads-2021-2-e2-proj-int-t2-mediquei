@model IEnumerable<app_web_backend_Mediquei.Models.ContratosCuidador>

@{
    ViewData["Title"] = "Index";
}

<head>
<title>Cuidadores</title>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<link rel="stylesheet" type="text/css" href="~/css/login.css">

</head>
<body>
    <h1>Contratos</h1>
    <p>
        <a class="btn btn-outline-dark" asp-action="Create" role="button">Novo Contrato</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cuidador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInicial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataFinal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraEntrada1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraSaida1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraEntrada2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraSaida2)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cuidador.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFinal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraEntrada1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraSaida1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraEntrada2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraSaida2)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>