@model app_web_backend_Mediquei.Models.ContratosCuidador

@{
    ViewData["Title"] = "Create";
}

<h3>Adicionar contrato cuidador</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CuidadorId" class="control-label"></label>
                <select asp-for="CuidadorId" class ="form-control" asp-items="ViewBag.CuidadorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PacienteId" class="control-label"></label>
                <select asp-for="PacienteId" class ="form-control" asp-items="ViewBag.PacienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataInicial" class="control-label"></label>
                <input asp-for="DataInicial" class="form-control" />
                <span asp-validation-for="DataInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFinal" class="control-label"></label>
                <input asp-for="DataFinal" class="form-control" />
                <span asp-validation-for="DataFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraEntrada1" class="control-label"></label>
                <input asp-for="HoraEntrada1" class="form-control" />
                <span asp-validation-for="HoraEntrada1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraSaida1" class="control-label"></label>
                <input asp-for="HoraSaida1" class="form-control" />
                <span asp-validation-for="HoraSaida1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraEntrada2" class="control-label"></label>
                <input asp-for="HoraEntrada2" class="form-control" />
                <span asp-validation-for="HoraEntrada2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraSaida2" class="control-label"></label>
                <input asp-for="HoraSaida2" class="form-control" />
                <span asp-validation-for="HoraSaida2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href=/ContratosCuidador type="button" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
