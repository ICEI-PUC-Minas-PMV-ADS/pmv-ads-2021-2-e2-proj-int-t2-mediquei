@model app_web_backend_Mediquei.Models.PacientesViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Paciente/Desafio</h1>

<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.EMail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Familiar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Familiar.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.grauParentesco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.grauParentesco)
        </dd>
        <dt>@Html.DisplayNameFor(model => model.DesafiosSaude)</dt>
        <dd>
            @if (Model.DesafiosSaude != null)
            {
                foreach (var item in Model.DesafiosSaude)
                {
                    if (item.Checked)
                    {
                        <div>
                            <span class="glyphicon glyphicon-list-alt"></span><Text>&nbsp;</Text>
                            @item.Nome
                        </div>
                    }
                }
            }
            else
            {
                <span class="glyphicon glyphicon-list-alt"></span><text>Sem Cursos Registrados</Text>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
