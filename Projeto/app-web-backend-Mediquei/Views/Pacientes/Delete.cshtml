@model app_web_backend_Mediquei.Models.Paciente

@{
    ViewData["Title"] = "Delete";
}

<h3>Deletar</h3>

<h4>Você tem certeza que quer deletar o paciente?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.EMail)
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a href=/Pacientes type="button" class="btn btn-secondary">Voltar</a>
    </form>
</div>
