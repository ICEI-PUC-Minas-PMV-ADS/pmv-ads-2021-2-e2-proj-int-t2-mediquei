@model IEnumerable<app_web_backend_Mediquei.Models.Cuidador>

@{
    ViewData["Title"] = "Index";
}
<head>
    <title>Cuidadores</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>
    <h1>Cuidadores</h1>

    <p>
        <a class="btn btn-outline-dark" asp-action="Create" role="button">Novo cuidador</a>
        <a class="btn btn-outline-dark" href=/ContratosCuidador role="button">Contratos</a>
    </p>
    <table class="table">
        <thead >
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.EMail)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="view" title="View" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                        <!--<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | -->
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-action="Relatorio" asp-route-id="@item.Id">Relatório</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
